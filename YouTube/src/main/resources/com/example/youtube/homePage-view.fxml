<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.youtube.Client.HomePageController">
    <top>
        <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #ffffff;">
            <TextField fx:id="searchField" promptText="Search..." HBox.hgrow="ALWAYS" />
            <Button fx:id="SearchButton" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Search" />
        </HBox>
    </top>
    <left>
        <VBox spacing="10">
            <Button fx:id="homeButton" text="Home" />
            <Button fx:id="yourChannel" text="Your Channel" />
            <Button fx:id="subscriptionsButton" text="Subscriptions" />

        </VBox>

    </left>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <VBox fx:id="videoListContainer" spacing="10">
                <!-- Video items will be added dynamically -->
                <HBox spacing="10">
                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Video 1" />
                        <Label text="Description 1" />
                    </VBox>
                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Video 2" />
                        <Label text="Description 2" />
                    </VBox>
                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Video 3" />
                        <Label text="Description 3" />
                    </VBox>
                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Video 4" />
                        <Label text="Description 4" />
                    </VBox>
                </HBox>
                <HBox spacing="10">
                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Video 5" />
                        <Label text="Description 5" />
                    </VBox>
                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Video 6" />
                        <Label text="Description 6" />
                    </VBox>
                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Video 7" />
                        <Label text="Description 7" />
                    </VBox>
                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Video 8" />
                        <Label text="Description 8" />
                    </VBox>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
