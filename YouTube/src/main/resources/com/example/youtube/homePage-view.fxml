<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.youtube.Client.HomePageController">
    <top>
        <HBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 10; -fx-background-color: black;">
            <TextField fx:id="searchField" prefHeight="16.0" prefWidth="295.0" promptText="Search" style="-fx-background-radius: 20;" HBox.hgrow="ALWAYS" />
            <Button style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 20;" text="Search" />
        </HBox>
    </top>
    <left>
        <VBox spacing="10" style="-fx-background-color: black;">
            <Button fx:id="homeButton" style="-fx-background-color: #dc3545;" text="LogOut" />
            <Button fx:id="yourChannel" style="-fx-background-color: #dc3545;" text="Your Channel" />
            <Button fx:id="subscriptionsButton" style="-fx-background-color: #dc3545;" text="Subscriptions" />

        </VBox>

    </left>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
         <content>
            <FlowPane fx:id="videoFlowPane" hgap="10" prefHeight="49.0" prefWidth="420.0" style="-fx-padding: 10; -fx-background-color: black;" vgap="10" />
         </content>
        </ScrollPane>
    </center>
</BorderPane>
