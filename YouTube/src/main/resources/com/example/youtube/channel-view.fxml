<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.youtube.ChannelController">
    <top>
        <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: black;">
            <TextField fx:id="searchField" promptText="Search..." style="-fx-background-radius: 20;" HBox.hgrow="ALWAYS" />
            <Button fx:id="searchButton" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 20;" text="Search" />
        </HBox>
    </top>
    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: black;">
            <Button fx:id="homeButton" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Home" />
            <Button fx:id="subscriptionButton" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Subscriptions" />
            <Button fx:id="yourChannelButton" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Your Channel" />
        </VBox>
    </left>
    <center>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: black;">
            <Label fx:id="channelNameLabel" style="-fx-font-size: 24px;" text="Channel Name" textFill="WHITE" />
            <HBox spacing="10" style="-fx-padding: 10;">
                <Label fx:id="description" style="-fx-font-weight: bold;" text="description" textFill="WHITE" />
            </HBox>
            <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: black;">
                <Label fx:id="subscribersLabel" style="-fx-font-weight: bold;" text="Subscribers: 100K" textFill="WHITE" />
                <Label fx:id="videosLabel" style="-fx-font-weight: bold;" text="Videos: 50" textFill="WHITE" />
                <Button fx:id="subscribeButton" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Subscribe" />
            </HBox>
            <ScrollPane fitToHeight="true" fitToWidth="true">
                <FlowPane fx:id="videoFlowPane" hgap="10" style="-fx-padding: 10; -fx-background-color: black;" vgap="10" />
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
