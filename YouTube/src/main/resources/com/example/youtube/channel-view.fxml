<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.youtube.Client.ChannelController">
    <top>
        <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #ffffff;">
            <TextField fx:id="searchField" promptText="Search..." HBox.hgrow="ALWAYS"/>
            <Button text="Search" style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
        </HBox>
    </top>
    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #ffffff;">
            <Button text="Home" style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
            <Button text="Subscriptions" style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
            <Button text="Your Channel" style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
        </VBox>
    </left>
    <center>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #ffffff;">
            <Label fx:id="channelNameLabel" text="Channel Name" style="-fx-font-size: 24px;"/>
            <HBox spacing="10" style="-fx-padding: 10;">
                <Label fx:id="description" text="description" style="-fx-font-weight: bold;"/>
            </HBox>
            <HBox spacing="10" style="-fx-padding: 10;">
                <Label fx:id="subscribersLabel" text="Subscribers: 100K" style="-fx-font-weight: bold;"/>
                <Label fx:id="videosLabel" text="Videos: 50" style="-fx-font-weight: bold;"/>
                <Button text="Subscribe" style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
            </HBox>
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <FlowPane fx:id="videoFlowPane" vgap="10" hgap="10" style="-fx-padding: 10;">
                    <Button text="Video 1" style="-fx-min-width: 150px;"/>
                    <Button text="Video 2" style="-fx-min-width: 150px;"/>
                    <Button text="Video 3" style="-fx-min-width: 150px;"/>
                    <Button text="Video 4" style="-fx-min-width: 150px;"/>
                    <Button text="Video 5" style="-fx-min-width: 150px;"/>
                    <Button text="Video 6" style="-fx-min-width: 150px;"/>
                    <Button text="Video 7" style="-fx-min-width: 150px;"/>
                    <Button text="Video 8" style="-fx-min-width: 150px;"/>
                </FlowPane>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
