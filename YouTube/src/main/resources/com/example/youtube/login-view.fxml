<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.youtube.LoginController" alignment="center" hgap="10" vgap="10" style="-fx-background-color: #ffffff;">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-pref-width: 200px;"/>

    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-pref-width: 200px;"/>

    <Button text="Login" fx:id="loginButton" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-font-size: 14px;"/>

    <Label text="Don't have an account?" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Button text="Sign Up" fx:id="signUpButton" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-background-color: transparent; -fx-text-fill: #ff0000; -fx-underline: true;"/>
</GridPane>
