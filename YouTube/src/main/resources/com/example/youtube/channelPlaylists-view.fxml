<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" prefHeight="461.0" prefWidth="629.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.youtube.Client.Controllers.Channels.UsersChannelsControllers.ChannelPlaylistsController">
    <top>
        <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: white;">
            <TextField fx:id="searchField" promptText="Search..." style="-fx-background-radius: 20;" HBox.hgrow="ALWAYS" />
            <Button fx:id="searchButton" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 20;" text="Search" />
        </HBox>
    </top>
    <left>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 10; -fx-background-color: white;">
            <Button fx:id="homeButton" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Home" />
            <Button fx:id="subscriptionButton" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Subscriptions" />
         <Button fx:id="creatPlaylist" mnemonicParsing="false" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="CreatePlaylist" />
        </VBox>
    </left>
    <center>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 10; -fx-background-color: white;" BorderPane.alignment="TOP_CENTER">
            <Label fx:id="channelNameLabel" style="-fx-font-size: 24px;" text="Channel Name">
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </Label>
            <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: bwhitelack;">
                <Label fx:id="subscribersLabel" style="-fx-font-weight: bold;" text="Subscribers: " />
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <VBox.margin>
               <Insets bottom="20.0" top="5.0" />
            </VBox.margin>
            </HBox>
            <ScrollPane fx:id="ScrollPane" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
                <content>
                    <VBox fx:id="SearchResultVbox" alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" />
                </content>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
