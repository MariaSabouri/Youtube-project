<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" style="-fx-background-color: black;" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.youtube.Client.Controllers.Channels.UsersChannelsControllers.CreatePlaylist">
   <padding>
      <Insets bottom="25" left="25" right="25" top="25" />
   </padding>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label fx:id="PlaylistNameLabel" text="Name Of The Playlist:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="0" />
      <TextField fx:id="PlaylistNameField" style="-fx-pref-width: 200px;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      <Button fx:id="createButton" style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-font-size: 14px;" text="Create" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Button fx:id="homeButton" style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-font-size: 14px;" text="Home" GridPane.rowIndex="2" />
   </children>
</GridPane>
