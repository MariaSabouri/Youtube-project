<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.youtube.Client.VideoController">
    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <TextField fx:id="searchField" promptText="Search" style="-fx-background-radius: 100;" HBox.hgrow="ALWAYS" />
            <Button style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Search" />
        </HBox>
    </top>
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label fx:id="video" style="-fx-font-size: 24px;" text="Video" />
            <Label fx:id="titleLabel" style="-fx-wrap-text: true;" text="Video Title" />
            <Label fx:id="descriptionLabel" style="-fx-wrap-text: true;" text="Video Description" />
            <HBox spacing="10">
                <Label fx:id="publishingDate" style="-fx-wrap-text: true;" text="publishingDate" />
                <Label fx:id="views" style="-fx-wrap-text: true;" text="views" />
            </HBox>
            <HBox spacing="10">
                <Button fx:id="likeButton" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 20;" text="Like" />
                <Button fx:id="dislikeButton" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 20;" text="Dislike" />
                <Button fx:id="addToWatchLaterButton" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 20;" text="Add to Watch Later" />
            </HBox>
            <HBox spacing="10">
                <Button fx:id="channelButton" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 20;" text="Channel" />
                <Button fx:id="subscribe" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 20;" text="subscribe" />
            </HBox>
        </VBox>
    </center>
    <bottom>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="10">
                <TextArea fx:id="commentInput" promptText="Add a comment..." HBox.hgrow="ALWAYS" />
                <Button onAction="#handlePostComment" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Post" />
            </HBox>
            <Label style="-fx-font-size: 18px;" text="Comments" />
            <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="200">
                <VBox fx:id="commentsBox" spacing="5" style="-fx-padding: 10;">
                    <!-- comments -->
                </VBox>
            </ScrollPane>
        </VBox>
    </bottom>
</BorderPane>
